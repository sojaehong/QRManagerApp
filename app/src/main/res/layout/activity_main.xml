<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/qr_edit_button"
        style="@style/OutlineButtonMain"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:text="생성" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="Scan"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/barcode_scan_button"
            style="@style/OutlineButtonMain"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_scan"
            android:text="스캔" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/image_scan_button"
            style="@style/OutlineButtonMain"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:icon="@drawable/ic_image_black_24dp"
            android:layout_marginLeft="5dp"
            android:text="이미지 스캔" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="History"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/history_button"
            style="@style/OutlineButtonMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_history_black_24dp"
            android:text="모든 기록 보기" />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:text="Setting"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        />

</LinearLayout>